
<Window
    x:Class="OsEngine.Views.Data.AddServersWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OsEngine.OsData"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:OsEngine.ViewModels.Data"
    Title="Os.Data"
    Width="300"
    Height="500"
    CanResize="False"
    x:DataType="vm:OsDataViewModel"
    Icon="/Assets/OsLogo.ico"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <ItemsControl Margin="5,31,5,0" ItemsSource="{Binding FeedServers}">
        <ItemsControl.ItemTemplate>
            <DataTemplate>
                <Grid HorizontalAlignment="Stretch" ColumnDefinitions="*,Auto">
                    <TextBlock
                        Grid.Column="0"
                        Margin="20,0,0,0"
                        Text="{Binding Name}" />
                    <!-- Width="32" -->
                    <!-- Height="32" -->
                    <Button
                        Grid.Column="1"
                        Width="32"
                        Height="32"
                        Padding="5"
                        Command="{Binding $parent[Window].DataContext.AddServer}"
                        CommandParameter="{Binding}"
                        HorizontalAlignment="Right"
                        Content="+"
                        HorizontalContentAlignment="Center"
                        CornerRadius="50" />
                </Grid>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>

</Window>
