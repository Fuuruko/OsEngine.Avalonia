                Height="19"
                Margin="10,24,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Time to end"
                FontSize="12"
                Foreground="AliceBlue" />
        </Grid>
        <Grid Grid.Row="1">
            <TabControl Name="TabControlPrime" Margin="10,-15,10,10">
                <TabItem
                    Name="TabItemControl"
                    Width="120"
                    FontSize="14"
                    Header="Control">
                    <view:OptimizerDataView />
                </TabItem>
                <TabItem
                    Name="TabItemParameters"
                    Width="120"
                    FontSize="14"
                    Header="Parameters">
                    <view:OptimizerParametersView />
                </TabItem>
                <TabItem
                    Name="TabItemFazes"
                    Width="120"
                    FontSize="14"
                    Header="Fazes">
                    <view:OptimizerPhazesView />
                </TabItem>
                <TabItem
                    Name="TabItemFilters"
                    Width="120"
                    FontSize="14"
                    Header="Filters">
                    <view:OptimizerFiltersView />
                </TabItem>
                <TabItem
                    Name="TabItemResults"
                    Width="120"
                    FontSize="14"
                    Header="Results">
                    <view:OptimizerResultsView />
                </TabItem>

