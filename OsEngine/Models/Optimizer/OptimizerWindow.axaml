    Icon="/Assets/OsLogo.ico"
    WindowStartupLocation="CenterScreen">
    <!--  DataContext="vm"  -->
    <Window.DataContext>
        <vm:OptimizerViewModel />
    </Window.DataContext>

    <Grid Name="GridPrime">
