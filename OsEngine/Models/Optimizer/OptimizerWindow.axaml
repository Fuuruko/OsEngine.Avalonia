                Width="148"
                MinHeight="40"
                Margin="0,82,24,19"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Content="Go!"
                FontSize="14" />
            <!--  Click="ButtonGo_Click"  -->

            <ProgressBar
                Name="ProgressBarPrime"
                Height="20"
                Margin="70,10,24,0"
                VerticalAlignment="Top" />

            <Label
                Name="Label7"
                Width="229"
                Height="19"
                Margin="10,5,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Progress"
                FontSize="12"
                Foreground="AliceBlue" />

            <Grid
                Name="GridThreadsProgress"
                MinHeight="10"
                Margin="10,29,326,10" />

            <ComboBox
                Name="ComboBoxThreadsCount"
                Width="135"
                Height="21"
                Margin="0,0,186,19"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                ItemsSource="{Binding Threads}"
                SelectedIndex="{Binding ThreadsNum}" />

            <Label
                Name="Label8"
                Margin="0,0,224,41"
                HorizontalAlignment="Right"
                VerticalAlignment="Bottom"
                Content="Threads" />
