            VerticalAlignment="Bottom"
            Content="Accept" />
        <!-- Click="ButtonAccept_Click" -->
        <Label
            Name="Label2"
            Margin="10,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="General settings"
            FontSize="18"
            FontWeight="Bold" />
        <Label
            Name="Label5"
            Margin="10,197,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Security"
            FontSize="18"
            FontWeight="Bold" />
        <StackPanel
            Margin="41,120,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Spacing="5"
            Orientation="Horizontal" >
            <!-- <ToggleButton Name="Commission" Content="Commission" /> -->
            <Label Content="Commission" VerticalContentAlignment="Center" />
            <NumericUpDown Margin="70,0,0,0" Width="190" 
                ShowButtonSpinner="False"/>
            <!-- IsEnabled="{Binding #Commission.IsChecked}" -->
            <ToggleButton
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                ToolTip.Tip="Fixed / Percent"
