            Margin="5,5,5,0"
            VerticalAlignment="Top" />

        <Label
            Name="Label1"
            Margin="41,39,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Server" />
        <ComboBox
            Name="ComboBoxTypeServer"
            Width="184"
            IsEnabled="{Binding !IsTester}"
            Margin="206,39,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />

        <Label
            Name="Label3"
            Margin="41,84,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Portfolio for operations" />
        <ComboBox
            Name="ComboBoxPortfolio"
            Width="184"
            Margin="206,84,0,0"
            IsEnabled="{Binding !IsTester}"
            HorizontalAlignment="Left"
            VerticalAlignment="Top" />

        <Label
            Name="Label6"
            Margin="29,231,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
