<Window
    x:Class="OsEngine.Views.Market.Connectors.ConnectorCandlesWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:OsEngine.ViewModels.Terminal"
    xmlns:conv="using:OsEngine.Converters"
    x:DataType="vm:BotViewModel"
    Title="Data flow connection"
    Width="450.43"
    Height="726"
    Icon="/Assets/OsLogo.ico"
    CanResize="False"
    WindowStartupLocation="CenterScreen">
    <!-- Style="{StaticResource WindowStyleNoResize}" -->
    <Window.Resources>
