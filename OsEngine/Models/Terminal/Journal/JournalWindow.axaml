                        <!--  <WindowsFormsHost  -->
                        <!--  Name="HostClosePosition"  -->
                        <!--  Margin="10"  -->
                        <!--  Foreground="Black" />  -->

                        <!-- </Grid> -->
                    </TabItem>
                </TabControl>
                <!-- </Grid> -->


            </Grid>
        </SplitView.Content>
    </SplitView>
</Window>
