            Grid.Column="3"
            FontWeight="Bold"
            Text="" />

        <TextBlock
            Grid.Row="6"
            Grid.Column="0"
            Text="Profit Factor" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="1"
            FontWeight="Bold"
            Text="" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="2"
            FontWeight="Bold"
            Text="" />
        <TextBlock
            Grid.Row="6"
            Grid.Column="3"
            FontWeight="Bold"
            Text="" />

        <TextBlock
            Grid.Row="7"
            Grid.Column="0"
            Text="Recovery" />
        <TextBlock
            Grid.Row="7"
            Grid.Column="1"
            FontWeight="Bold"
            Text="" />
