<UserControl
    x:Class="OsEngine.Views.Terminal.DepthOfMarketView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Grid ColumnDefinitions="*,2*" RowDefinitions="*,130">

        <DataGrid
            Background="Black"
            GridLinesVisibility="All"
            Grid.Row="0" Grid.Column="1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Volume" />
                <DataGridTextColumn Header="Price" />
            </DataGrid.Columns>
        </DataGrid>

        <Grid

            RowSpacing="2"
            ColumnSpacing="2"
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.Styles>
                <Style Selector="Button">
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
                <Style Selector="TextBox">
                    <Setter Property="HorizontalAlignment" Value="Stretch" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                </Style>
            </Grid.Styles>

            <Button
                Grid.Row="0"
                Grid.Column="0"
                Name="ButtonBuyFast"
                HorizontalAlignment="Stretch"
                Content="  Buy&#xD;&#xA;Market"
                FontSize="11" />
            <!--  Click="buttonBuyFast_Click_1"  -->

            <TextBox
                Grid.Row="0"
                Grid.Column="1"
                Name="TextBoxVolumeFast"
                BorderThickness="1,0,1,1"
                Text="1"
                HorizontalAlignment="Stretch"
                TextAlignment="Center"
                TextWrapping="Wrap" />
            <!--  Style="{StaticResource TextBoxRectangular}"  -->

            <Button
                Grid.Row="0"
                Grid.Column="2"
                HorizontalAlignment="Stretch"
                Name="ButtonSellFast"
                Content="  Sell&#xA;Market"
                FontSize="11" />

            <!--  Click="buttonSellFast_Click"  -->
            <!--  <WindowsFormsHost  -->
            <!--  Name="HostGlass"  -->
            <!--  Margin="0,0,0,127"  -->
            <!--  Foreground="#FF060606" />  -->

            <Button
                HorizontalAlignment="Stretch"
                Grid.Row="1"
                Grid.Column="0"
                Name="ButtonBuyLimit"
                Content="Buy&#xD;&#xA;Limit"
                FontSize="11" />
            <!--  Click="ButtonBuyLimit_Click"  -->

            <TextBox
                Grid.Row="1"
                Grid.Column="1"
                Name="TextBoxPrice"
                HorizontalAlignment="Stretch"
                BorderThickness="1,0,1,1"
                TextAlignment="Center"
                TextWrapping="Wrap" />
            <!--  Style="{StaticResource TextBoxRectangular}"  -->

            <Button
                Grid.Row="1"
                Grid.Column="2"
                Name="ButtonSellLimit"
                HorizontalAlignment="Stretch"
                Content="Sell&#xA;Limit"
                FontSize="11" />
            <!--  Click="ButtonSellLimit_Click"  -->

            <Button
                Grid.Row="2"
                Grid.Column="0"
                Name="ButtonCloseLimit"
                Grid.ColumnSpan="2"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Content="Revoke limits" />
            <!--  Click="ButtonCloseLimit_Click"  -->

            <Button
                Grid.Row="2"
                Grid.Column="2"
                Name="ButtonMoreOpenPositionDetail"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Content="More >>" />
            <!--  Click="ButtonMoreOpenPositionDetail_Click"  -->

        </Grid>
    </Grid>
</UserControl>
