<Window
    x:Class="OsEngine.Views.OsConverter.OsCandleConverterView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OsEngine.OsConverter"
    xmlns:vm="using:OsEngine.ViewModels.OsConverter"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Converter: 1 / 5 min candles to another candles"
    Width="620"
    Height="410"
    MinWidth="610"
    MinHeight="400"
    x:DataType="vm:OsCandleConverterViewModel"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="173*" />
            <ColumnDefinition Width="437*" />
        </Grid.ColumnDefinitions>
        <Rectangle
            Grid.ColumnSpan="2"
            Height="85"
            Margin="5,5,5,0"
            VerticalAlignment="Top" />
        <Label
            Name="Label1"
            Margin="26,15,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Initial data"
            FontSize="16" />
        <TextBox
            Name="TextBoxSource"
            Grid.ColumnSpan="2"
            Margin="26,46,15,0"
            VerticalAlignment="Top"
            IsEnabled="False"
            TextWrapping="Wrap" />
        <Button
            Name="ButtonSetSource"
            Grid.Column="1"
            Width="181"
            Margin="21.574,14,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="ButtonSetSource_Click"
            Content="Specify" />
        <Rectangle
            Grid.ColumnSpan="2"
            Height="96"
            Margin="5,95,5,0"
            VerticalAlignment="Top" />
        <Label
            Name="Label2"
            Margin="26,102,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Content="Outgoing data"
            FontSize="16" />
        <TextBox
            Name="TextBoxExit"
            Grid.ColumnSpan="2"
            Margin="26,131,15,0"
            VerticalAlignment="Top"
            IsEnabled="False"
            TextWrapping="Wrap" />
        <Button
            Name="ButtonSetExitFile"
            Grid.Column="1"
            Width="183"
            Margin="21.574,101,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Click="ButtonSetExitFile_Click"
            Content="Specify" />
        <Grid
            Name="GreedLog"
            Grid.ColumnSpan="2"
            Margin="10,196,5,6">
            <TabControl
                Name="TabControlPrime"
                Margin="10,-21,0,0"
                Background="#FF17171B"
                BorderThickness="0">
                <TabItem
                    Name="Label4"
                    Width="140"
                    Header="Logging">
                    <Grid>
                        <!-- <WindowsFormsHost Name="HostLog" /> -->
                    </Grid>
                </TabItem>
            </TabControl>
        </Grid>
        <ComboBox
            Name="ComboBoxTimeFrame"
            Grid.Column="1"
            Width="190"
            Margin="0,103,15,0"
            ItemsSource="{Binding ConvertToTimeFrame}"
            SelectedIndex="0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top" />
        <Rectangle
            Width="20"
            Height="179"
            Margin="0,0,0,-2"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Fill="#FCEE21"
            RenderTransformOrigin="0.5,0.5"
            Stroke="Black"
            StrokeThickness="0">
            <Rectangle.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform AngleY="-44" />
                    <RotateTransform />
                    <TranslateTransform Y="-12.012" />
                </TransformGroup>
            </Rectangle.RenderTransform>
        </Rectangle>
        <Label
            Name="LabelOsa"
            Width="80"
            Height="29"
            Margin="-30,0,0,87"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Content="O-S-A.NET"
            FontWeight="Bold"
            Foreground="Black"
            RenderTransformOrigin="0.5,0.5">
            <Label.RenderTransform>
                <TransformGroup>
                    <ScaleTransform />
                    <SkewTransform />
                    <RotateTransform Angle="-90" />
                    <TranslateTransform />
                </TransformGroup>
            </Label.RenderTransform>
        </Label>
        <Button
            Name="ButtonStart"
            Grid.Column="1"
            Margin="21.574,159,15,0"
            VerticalAlignment="Top"
            Command="{Binding StartConvert}"
            Content="Start conversion" />
        <ComboBox
            Name="ComboBoxTimeFrameInitial"
            Grid.Column="1"
            ItemsSource="{Binding ConvertFromTimeFrame}"
            SelectedIndex="0"
            Width="190"
            Margin="0,16,15,0"
            HorizontalAlignment="Right"
            VerticalAlignment="Top" />
    </Grid>
</Window>
